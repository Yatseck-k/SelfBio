
# --- ОБЩИЕ ---
APP_NAME=SelfBio
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://myapp.local
APP_PORT=8080

# --- ЛОКАЛИЗАЦИЯ ---
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# --- ОБСЛУЖИВАНИЕ ---
APP_MAINTENANCE_DRIVER=file

# --- ХЕШИРОВАНИЕ ---
BCRYPT_ROUNDS=12

# --- ЛОГИРОВАНИЕ ---
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# --- БД ---
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=password

# --- СЕССИИ ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.myapp.local

# --- ОЧЕРЕДИ ---
QUEUE_CONNECTION=redis
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# --- КЭШ ---
CACHE_STORE=redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- ПОЧТА ---
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_NAME="${APP_NAME}"
MAIL_EHLO_DOMAIN=localhost
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="admin@local.test"

# --- SOKETI ---
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=local
PUSHER_APP_KEY=localkey
PUSHER_APP_SECRET=localsecret
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# --- VITE ---
VITE_APP_NAME="${APP_NAME}"

# --- CACHE ---
CONFIG_CACHE=true
ROUTE_CACHE=true
VIEW_CACHE=true

# --- ПОРТЫ ДЛЯ ПРОКИДКИ ---
FORWARD_REDIS_PORT=6379
FORWARD_DB_PORT=5432
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025
FORWARD_RABBITMQ_PORT=5672
FORWARD_RABBITMQ_DASHBOARD_PORT=15672
PUSHER_METRICS_PORT=9601
VITE_PORT=5173

# Weather API
OPENWEATHER_API_KEY=your_api_key_here
OPENWEATHER_DEFAULT_CITY=Krasnodar
OPENWEATHER_UNITS=metric

# Dashboard Settings
DASHBOARD_CACHE_TTL=300
WEATHER_CACHE_TTL=1800
POMODORO_DEFAULT_WORK=25
POMODORO_DEFAULT_BREAK=5
